{
  "name": "@windingtree/sdk-react",
  "version": "1.3.5",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./providers": {
      "import": {
        "types": "./dist/providers/index.d.ts",
        "default": "./dist/providers.es.js"
      },
      "require": {
        "types": "./dist/providers/index.d.ts",
        "default": "./dist/providers.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils.es.js"
      },
      "require": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils.cjs"
      }
    }
  },
  "devDependencies": {
    "@trpc/client": "^10.44.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@windingtree/sdk-client": "workspace:*",
    "@windingtree/sdk-contracts-manager": "workspace:*",
    "@windingtree/sdk-node-api": "workspace:*",
    "@windingtree/sdk-storage": "workspace:*",
    "@windingtree/sdk-types": "workspace:*",
    "eslint": "^8.45.0",
    "eslint-config-react-app": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superjson": "^2.2.1",
    "typescript": "^5.1.6",
    "viem": "^1.19.13"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --ignore-path ../../.lintignore --fix && prettier --ignore-path ../../.lintignore  --write ."
  }
}
