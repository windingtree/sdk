{
  "name": "@windingtree/sdk-utils",
  "version": "1.1.0-beta.2",
  "description": "Utility class for interaction with the protocol smart contracts",
  "repository": "https://github.com/windingtree/sdk#readme",
  "author": "Kostiantyn Smyrnov <kostysh@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    },
    "./h3": {
      "import": {
        "types": "./dist/h3.d.ts",
        "default": "./dist/h3.js"
      },
      "require": {
        "types": "./dist/h3.d.ts",
        "default": "./dist/h3.cjs.js"
      }
    },
    "./regex": {
      "import": {
        "types": "./dist/regex.d.ts",
        "default": "./dist/regex.js"
      },
      "require": {
        "types": "./dist/regex.d.ts",
        "default": "./dist/regex.cjs.js"
      }
    },
    "./text": {
      "import": {
        "types": "./dist/text.d.ts",
        "default": "./dist/text.js"
      },
      "require": {
        "types": "./dist/text.d.ts",
        "default": "./dist/text.cjs.js"
      }
    },
    "./time": {
      "import": {
        "types": "./dist/time.d.ts",
        "default": "./dist/time.js"
      },
      "require": {
        "types": "./dist/time.d.ts",
        "default": "./dist/time.cjs.js"
      }
    },
    "./uid": {
      "import": {
        "types": "./dist/uid.d.ts",
        "default": "./dist/uid.js"
      },
      "require": {
        "types": "./dist/uid.d.ts",
        "default": "./dist/uid.cjs.js"
      }
    },
    "./wallet": {
      "import": {
        "types": "./dist/wallet.d.ts",
        "default": "./dist/wallet.js"
      },
      "require": {
        "types": "./dist/wallet.d.ts",
        "default": "./dist/wallet.cjs.js"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/luxon": "^3.3.0",
    "@windingtree/contracts": "1.0.0-beta.12"
  },
  "dependencies": {
    "h3-js": "^4.1.0",
    "luxon": "^3.3.0",
    "viem": "^1.3.0"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --ext .ts --ignore-path ../../.lintignore",
    "lint:fix": "eslint . --ext .ts --ignore-path ../../.lintignore --fix && prettier --ignore-path ../../.lintignore  --write .",
    "test": "vitest --run test",
    "test:rel": "vitest related --run"
  }
}
